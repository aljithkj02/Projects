generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  content  String
  imageUrl String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
